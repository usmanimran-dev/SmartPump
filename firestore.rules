rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to get user's organization ID
    function getUserOrg() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.orgId;
    }
    
    // Helper function to get user's company ID
    function getUserCompany() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId;
    }
    
    // Helper function to get user's role
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    // Helper function to check if user is super admin
    function isSuperAdmin() {
      return request.auth != null && getUserRole() == 'super-admin';
    }
    
    // Helper function to check if user is owner
    function isOwner() {
      return request.auth != null && getUserRole() == 'owner';
    }
    
    // Users collection - users can read/update their own profile
    match /users/{userId} {
      allow read: if request.auth != null && (
        request.auth.uid == userId || 
        isSuperAdmin() || 
        isOwner()
      );
      allow write: if request.auth != null && (
        request.auth.uid == userId || 
        isOwner()
      );
    }
    
    // Companies collection - super admins and owners can manage
    match /companies/{companyId} {
      allow read: if request.auth != null && (
        isSuperAdmin() || 
        (isOwner() && getUserCompany() == companyId)
      );
      allow write: if request.auth != null && isSuperAdmin();
    }
    
    // Stations collection - multi-tenant isolation by orgId
    match /stations/{stationId} {
      allow read: if request.auth != null && (
        isSuperAdmin() ||
        resource.data.orgId == getUserOrg()
      );
      allow write: if request.auth != null && (
        isSuperAdmin() ||
        (isOwner() && resource.data.orgId == getUserOrg())
      );
    }
    
    // Pumps collection - multi-tenant isolation by companyId
    match /pumps/{pumpId} {
      allow read: if request.auth != null && (
        isSuperAdmin() ||
        resource.data.companyId == getUserCompany()
      );
      allow write: if request.auth != null && (
        isSuperAdmin() ||
        (isOwner() && resource.data.companyId == getUserCompany())
      );
    }
    
    // Fuel entries - strict org isolation
    match /fuelEntries/{entryId} {
      allow read: if request.auth != null && (
        isSuperAdmin() ||
        resource.data.orgId == getUserOrg()
      );
      allow create: if request.auth != null && 
        request.resource.data.orgId == getUserOrg();
      allow update, delete: if request.auth != null && (
        isSuperAdmin() ||
        (isOwner() && resource.data.orgId == getUserOrg())
      );
    }
    
    // Alerts - org isolation
    match /alerts/{alertId} {
      allow read: if request.auth != null && (
        isSuperAdmin() ||
        resource.data.orgId == getUserOrg()
      );
      allow write: if request.auth != null && (
        isSuperAdmin() ||
        (isOwner() && resource.data.orgId == getUserOrg())
      );
    }
    
    // Shifts - org isolation
    match /shifts/{shiftId} {
      allow read: if request.auth != null && (
        isSuperAdmin() ||
        resource.data.orgId == getUserOrg()
      );
      allow write: if request.auth != null && (
        isSuperAdmin() ||
        (isOwner() && resource.data.orgId == getUserOrg())
      );
    }
    
    // Expenses - org isolation
    match /expenses/{expenseId} {
      allow read: if request.auth != null && (
        isSuperAdmin() ||
        resource.data.orgId == getUserOrg()
      );
      allow write: if request.auth != null && (
        isSuperAdmin() ||
        (isOwner() && resource.data.orgId == getUserOrg())
      );
    }
    
    // Audit logs - read-only except for system
    match /auditLogs/{logId} {
      allow read: if request.auth != null && (
        isSuperAdmin() ||
        isOwner()
      );
      allow create: if request.auth != null;
      allow update, delete: if false; // Logs are immutable
    }
  }
}
